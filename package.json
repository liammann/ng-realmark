{
  "name": "ng2-realmark",
  "version": "1.0.2",
  "description": "Real-time Markdown (w/ code highlighting) angular2 ",
  "main": "ng-realmark.js",
  "config": {
    "update": "patch"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublish": "tsc",
    "transpile": "ngc",
    "copy": "cpx './package-dist.json' dist && renamer --find 'package-dist.json' --replace 'package.json' ./dist/*",
    "copyRead": "cpx './readme.md' dist",
    "package": "rollup -c && npm run copy && npm run copyRead",
    "minify": "uglifyjs dist/bundles/ng-realmark.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng-realmark.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify && npm run buildCss",
    "publish": "cd ./dist && npm version $npm_package_config_update && npm publish",
    "buildCss": "node-sass src/style.scss dist/realmark.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liammann/ng-realmark.git"
  },
  "typings": "./ng-realmark.d.ts",
  "keywords": [
    "angular2",
    "markdown",
    "code highlighting"
  ],
  "author": "Liam Mann",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/liammann/ng-realmark/issues"
  },
  "homepage": "https://github.com/liammann/ng-realmark#readme",
  "dependencies": {
    "@angular/core": "^4.0.1",
    "@types/diff": "^3.2.0",
    "diff": "^3.3.0",
    "es6-shim": "^0.35.0",
    "prismjs": "^1.6.0",
    "reflect-metadata": "0.1.2",
    "rxjs": "^5.1.0",
    "showdown": "^1.5.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/common": "^4.0.1",
    "@angular/compiler": "^4.0.1",
    "@angular/compiler-cli": "^4.0.1",
    "@types/prismjs": "^1.4.18",
    "@types/showdown": "^1.4.31",
    "cpx": "^1.5.0",
    "node-sass": "^4.5.2",
    "renamer": "^0.6.1",
    "rimraf": "^2.5.2",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-inject": "^2.0.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "typescript": "^2.2.2",
    "uglify-js": "^2.8.21"
  }
}
